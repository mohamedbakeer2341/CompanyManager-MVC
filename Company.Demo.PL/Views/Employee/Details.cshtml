@model EmployeeViewModel
@inject IDepartmentRepository _departmentRepository;
@{

    var departments = new SelectList(await _departmentRepository.GetAll(), nameof(Department.Id), nameof(Department.Name));
}
@{
    ViewData["Title"] = "Details";
}

<form asp-action="Details">
    <h1>Details</h1>
    <div>
        <img src="~/files/images/@Model.ImageName" width="75" class="img-fluid rounded-circle" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="IsActive" class="col-form-label"></label>
        <input asp-for="IsActive" class="form-check-input" readonly />
    </div>


    <div class="form-group">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Department</label>
        <input type="text" value="@Model.Department?.Name" class="form-control" readonly />
    </div>

    <br />
    <br />

    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" class ="btn btn-primary">Edit</a>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
</form>
