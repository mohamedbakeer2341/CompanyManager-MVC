@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn" method="post">
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<input class="text w3lpass" asp-for="Password" placeholder="Password" required="">

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remeber Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Sign In">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Sign Up Now!</a></p>
	</div>
</div>
